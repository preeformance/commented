<!-- sets up doc to be html -->
<!DOCTYPE html>
<!-- sets the page to english -->
<html lang="en">
    <!-- sets up the internal workings of the html page -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<!-- what's visible on the html page -->
<body>
    <!-- the h1, main heading -->
    <h1>Todo List: </h1>
    <!-- bulleted list -->
    <ul class="todoItems">
        <!-- for loop to pull items from database to make the list -->
    <% for(let i=0; i < items.length; i++) {%>
        <!--  -->
        <li class="item">
            <!--  -->
            <% if(items[i].completed === true) {%>
               <!--  -->
                <span class='completed'><%= items[i].thing %></span>
            <!--  -->
                <% }else{ %>
                    <!--  -->
                <span><%= items[i].thing %></span>
            <% } %> 
               <!--  -->
            <span class='fa fa-trash'></span>
            <!-- closing li tag -->
        </li>
        <!-- closing for loop -->
    <% } %>
    <!-- closing ul tag -->
    </ul>
<!-- a header, not as important as h1, with a pull from the server to get the left variable -->
    <h2>Left to do: <%= left %></h2>

    <h2>Add A Todo:</h2>

    <form action="/addTodo" method="POST">
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <input type="submit">
    </form>
    

    <script src='js/main.js'></script>
</body>
</html>
